<div class="container">
  <div class='follow-title'>
    <% provide(:title, @title) %>
    <h3><%= @title %></h3>
  </div>
      <section class="stats">
        <% if @users.any? %>
          <div class="user-index">
            <% @users.each do |user| %>
              <span><%= link_to user_path(user.id) do %>
                      <%= attachment_image_tag user, :image, :fill, 40, 40, fallback: "No_image.png",size: '40x40', class:"user-image" %>
                    <% end %>
              </span>
              <%= link_to user.nickname, user_path(user.id) %>
            <% end %>
          </div><br>
        <% end %>
      </section>
    </aside>
    <div class="col-md-8">
      <% if @users.any? %>
        <ul class="users follow">
        </ul>
        <%= will_paginate %>
      <% end %>
    </div>
  </div>
</div>